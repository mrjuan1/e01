#!/bin/sh -e

defaultName="$(basename $(pwd))"
defaultPlatform="linux"

function showUsage() {
	msg="$1"

	if [ ! -z "$msg" ]; then
		echo -e "$msg\n"
	fi

	echo "Usage: $0 [<option(s)...>]"
	echo "Options:"
	echo "  -n --name     <name>     Executable name (default: $defaultName)"
	echo "  -p --platform <platform> Configure for <platform> (default: $defaultPlatform)"
	echo "  -h --help                Show this message"
	echo -e "Supported platforms: \"linux\"\n"

	if [ -z "$msg" ]; then
		exit 0
	else
		exit 1
	fi
}

selectName=0
selectPlatform=0

for arg in $@; do
	if [ $selectPlatform -eq 1 ]; then
		platform="$arg"
		selectPlatform=0

		continue
	elif [ $SelectName -eq 1 ]; then
		name="$arg"
		selectName=0

		continue
	fi

	case "$arg" in
	"-n" | "--name")
		selectName=1
		;;
	"-p" | "--platform")
		selectPlatform=1
		;;
	"-h" | "--help")
		showUsage
		;;
	*)
		showUsage "Unknown option \"$arg\"."
		;;
	esac
done

if [ -z "$name" ]; then
	name="$defaultName"
fi

if [ -z "$platform" ]; then
	platform="$defaultPlatform"
fi

case "$platform" in
"linux")
	echo "Configuring for platform \"$platform\"..."

	git submodule init
	git submodule update

	if [ ! -e libcapi.so ]; then
		cd vendor/bulletcapi/capi

		sed -i 's|btMiniSDF.cpp$|btMiniSDF.cpp \\\n\t\t$(BULL)BulletCollision/CollisionShapes/btHeightfieldTerrainShape.cpp|' bullet.mk
		sed -i 's|\-\-fast\-math$|-m64 -ftree-vectorize -ffast-math -funroll-loops -fPIC|;s|^all: test$|all: libcapi.so|' Makefile
		echo -e "capi.o: capi.cpp\n\tg++ \$< -o \$@ \$(FLAGS)\n\nlibcapi.so: capi.o lib/libbullet.a\n\tg++ \$^ -o \$@ -shared\n\tstrip -s \$@" >>Makefile

		make -j$(nproc)
		mv -v libcapi.so ../../..

		make cleanall
		rm -fv capi.o
		git checkout .

		cd ../../..
	fi

	cp -v ../*.{blend,png} tools

	cd tools/model
	if [ ! -e Makefile ]; then
		./configure
	fi
	make
	for file in {indexed,dimensions}-*.bin; do
		cp -v $file ../../$(echo $file | sed 's|^indexed\-||')
	done

	cd ../texture
	git submodule init
	git submodule update
	if [ ! -e Makefile ]; then
		./configure
	fi
	make
	cp -v *.bin ../..
	cd ../..

	echo "O := $name" >Makefile
	echo "include $platform.mk" >>Makefile
	;;
*)
	showUsage "Unknown platform \"$platform\"."
	;;
esac

echo "Done, you can run \"make\" now."
